protected void doGet(HttpServletRequest request, HttpServletResponse response)
        throws ServletException, IOException {
    List<String> menuItems = new ArrayList<>();
    List<String> dataGroups = new ArrayList<>();

    try (Connection conn = DatabaseConnection.getConnection()) {
        String menuQuery = "SELECT TenTheLoai, Url, Target, LinkNgoai FROM TheLoai WHERE VisibleTheLoai = 1 ORDER BY SapXep";
        try (PreparedStatement stmt = conn.prepareStatement(menuQuery);
             ResultSet rs = stmt.executeQuery()) {
            while (rs.next()) {
                String tenTheLoai = rs.getString("TenTheLoai");
                String url = rs.getString("Url");
                String target = rs.getString("Target");
                boolean linkNgoai = rs.getBoolean("LinkNgoai");
                String menuItem;
                if (linkNgoai) {
                    menuItem = "<a href='" + url + "' target='" + target + "'>" + tenTheLoai + "</a>";
                } else {
                    // Gán href="/SICTWeb/tintuc" cho "Tin tức", các mục khác để href="#"
                    String href = tenTheLoai.equals("Tin tức") ? "/SICTWeb/tintuc" : "#";
                    menuItem = "<a href='" + href + "'>" + tenTheLoai + "</a>";
                }
                menuItems.add(menuItem);
            }
        }

        String groupQuery = "SELECT TenTheLoai FROM TheLoai WHERE VisibleTheLoai1 = 1 ORDER BY SapXep";
        try (PreparedStatement stmt = conn.prepareStatement(groupQuery);
             ResultSet rs = stmt.executeQuery()) {
            while (rs.next()) {
                dataGroups.add(rs.getString("TenTheLoai"));
            }
        }

        request.setAttribute("menuItems", menuItems);
        request.setAttribute("dataGroups", dataGroups);
        request.getRequestDispatcher("/index.jsp").forward(request, response);
    } catch (Exception e) {
        e.printStackTrace();
        response.sendError(HttpServletResponse.SC_INTERNAL_SERVER_ERROR, e.getMessage());
    }
}