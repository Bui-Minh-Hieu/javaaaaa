// File: webapp/WEB-INF/tintuc.jsp
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>${tieuDe != null ? tieuDe : 'Tin Tức'}</title>
    <link rel="stylesheet" href="../styles.css">
</head>
<body>
    <% if (request.getAttribute("error") != null) { %>
        <p class="error"><%= request.getAttribute("error") %></p>
    <% } else { %>
        <h1>${tieuDe}</h1>
        <p class="date">${ngayCapNhat}</p>
        <div class="summary">${trichDanTin}</div>
        <div class="content">${noiDungTin}</div>
    <% } %>
    <a href="../index.jsp">Quay lại</a>
</body>
</html>

// File: webapp/WEB-INF/web.xml
<?xml version="1.0" encoding="UTF-8"?>
