// File: src/main/java/com/sict/database/DatabaseConnection.java
package com.sict.database;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DatabaseConnection {
    private static final String URL = "jdbc:sqlserver://localhost:1433;databaseName=SICT_HAUI;encrypt=true;trustServerCertificate=true";
    private static final String USER = "sa";
    private static final String PASSWORD = "your_password_here"; // Replace with your actual password

    static {
        try {
            // Ensure the SQL Server JDBC driver is loaded
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
        } catch (ClassNotFoundException e) {
            System.err.println("SQL Server JDBC Driver not found. Ensure the JAR is in the classpath.");
            e.printStackTrace();
        }
    }

    public static Connection getConnection() throws SQLException {
        try {
            return DriverManager.getConnection(URL, USER, PASSWORD);
        } catch (SQLException e) {
            System.err.println("Failed to connect to the database. Check SQL Server instance, credentials, and network settings.");
            throw e;
        }
    }
}

// File: src/main/java/com/sict/servlet/IndexServlet.java
package com.sict.servlet;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/index")
public class IndexServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response) 
            throws ServletException, IOException {
        System.out.println("IndexServlet accessed");
        response.sendRedirect("index.jsp");
    }
}

// File: src/main/java/com/sict/servlet/NewsServlet.java
package com.sict.servlet;

import com.sict.database.DatabaseConnection;
import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/news")
public class NewsServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response) 
            throws ServletException, IOException {
        System.out.println("NewsServlet accessed with id: " + request.getParameter("id"));
        int id;
        try {
            id = Integer.parseInt(request.getParameter("id"));
        } catch (NumberFormatException e) {
            request.setAttribute("error", "Invalid news ID");
            request.getRequestDispatcher("/WEB-INF/tintuc.jsp").forward(request, response);
            return;
        }

        String tieuDe = "";
        String trichDanTin = "";
        String noiDungTin = "";
        String ngayCapNhat = "";

        try (Connection conn = DatabaseConnection.getConnection()) {
            String sql = "SELECT TieuDeTinTuc, TrichDanTin, NoiDungTin, NgayCapNhat FROM TinTuc WHERE MaTinTuc = ?";
            PreparedStatement stmt = conn.prepareStatement(sql);
            stmt.setInt(1, id);
            ResultSet rs = stmt.executeQuery();
            if (rs.next()) {
                tieuDe = rs.getString("TieuDeTinTuc");
                trichDanTin = rs.getString("TrichDanTin");
                noiDungTin = rs.getString("NoiDungTin");
                ngayCapNhat = rs.getTimestamp("NgayCapNhat") != null ? rs.getTimestamp("NgayCapNhat").toString() : "";
            } else {
                request.setAttribute("error", "News article not found");
            }
        } catch (SQLException e) {
            e.printStackTrace();
            request.setAttribute("error", "Database error: " + e.getMessage());
        }

        request.setAttribute("tieuDe", tieuDe);
        request.setAttribute("trichDanTin", trichDanTin);
        request.setAttribute("noiDungTin", noiDungTin);
        request.setAttribute("ngayCapNhat", ngayCapNhat);
        request.getRequestDispatcher("/WEB-INF/tintuc.jsp").forward(request, response);
    }
}

// File: webapp/index.jsp
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>SICT News</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Chào mừng đến với SICT News</h1>
    <a href="news?id=5">Xem tin tức mẫu</a>
</body>
</html>

